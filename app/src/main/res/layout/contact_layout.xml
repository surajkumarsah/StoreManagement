<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:paddingLeft="10dp"
                android:drawableStart="@drawable/ic_baseline_developer_mode_24"
                android:fontFamily="@font/gabriela_regular"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="Contact"/>

    </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/white_light"

        >

            <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:elevation="10dp"
                    android:layout_marginStart="5dp"
                    android:padding="5dp"
            >


                <ImageView android:layout_width="50dp" android:layout_height="50dp"
                           android:src="@drawable/ic_phone_round"
                           android:layout_marginTop="20dp"
                           android:layout_centerHorizontal="true"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_centerHorizontal="true"
                          android:text="Phone"
                          android:fontFamily="sans-serif"
                          android:textColor="@color/black"
                          android:layout_alignParentBottom="true"
                          android:layout_marginBottom="20dp"/>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:elevation="10dp"
                    android:layout_marginStart="5dp"
                    android:padding="5dp"
            >

                <ImageView android:layout_width="50dp" android:layout_height="50dp"
                           android:src="@drawable/ic_launcher_round"
                           android:layout_marginTop="20dp"
                           android:layout_centerHorizontal="true"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_centerHorizontal="true"
                          android:text="Email"
                          android:fontFamily="sans-serif"
                          android:textColor="@color/black"
                          android:layout_alignParentBottom="true"
                          android:layout_marginBottom="20dp"/>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:elevation="10dp"
                    android:layout_marginStart="5dp"
                    android:padding="5dp"
            >


                <ImageView android:layout_width="50dp" android:layout_height="50dp"
                           android:src="@drawable/ic_mail_round"
                           android:layout_marginTop="20dp"
                           android:layout_centerHorizontal="true"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_centerHorizontal="true"
                          android:text="Mail"
                          android:fontFamily="sans-serif"
                          android:textColor="@color/black"
                          android:layout_alignParentBottom="true"
                          android:layout_marginBottom="20dp"/>
            </RelativeLayout>


        </LinearLayout>

</LinearLayout>