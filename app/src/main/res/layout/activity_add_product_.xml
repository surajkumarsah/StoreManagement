<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUp_Activity">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:paddingLeft="32dp"
            android:paddingRight="32dp">

        <ImageView
                android:id="@+id/image"
                android:layout_width="60dp" android:layout_height="60dp"
                android:src="@drawable/ic_persons_round"
        />

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black"
                android:theme="@style/EditScreenTextInputLayoutStyle">

            <EditText
                    android:id="@+id/p_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="16dp"
                    android:drawableRight="@drawable/ic_baseline_person_24"
                    android:fontFamily="@font/gabriela_regular"
                    android:hint="Product Name"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black"
                android:theme="@style/EditScreenTextInputLayoutStyle">

            <EditText
                    android:id="@+id/p_shortDesc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="16dp"
                    android:drawableRight="@drawable/ic_baseline_local_phone_24"
                    android:fontFamily="@font/gabriela_regular"
                    android:hint="Short Description"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black"
                android:theme="@style/EditScreenTextInputLayoutStyle">

            <EditText
                    android:id="@+id/p_desc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="16dp"
                    android:drawableRight="@drawable/ic_baseline_mail_24"
                    android:fontFamily="@font/gabriela_regular"
                    android:hint="Description"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>


            <Button
                    android:id="@+id/add_product_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonshapewhitebg"
                    android:fontFamily="@font/gabriela_regular"
                    android:text="Add"
                    android:textAllCaps="false"
                    android:textColor="#8614E9"
                    android:textSize="16dp"
                    android:layout_marginTop="13dp"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold" />


    </LinearLayout>

    <RelativeLayout
            android:id="@+id/noty_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
    ></RelativeLayout>

    <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="30dp" android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:visibility="gone"/>


</RelativeLayout>