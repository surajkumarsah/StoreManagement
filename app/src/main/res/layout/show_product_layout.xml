<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>



    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:elevation="10dp"
    >


        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/p_image"
                android:layout_width="80dp"
                android:layout_height="800dp"
                android:src="@drawable/person"
                android:layout_marginTop="35dp"
                android:layout_centerVertical="true"
        />




        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="70dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:background="@drawable/purple_gradient"
        >
            <TextView
                    android:id="@+id/p_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Product Name"
                    android:textSize="15dp"
                    android:fontFamily="serif"
                    android:textColor="@color/purple"
            />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/white"
                    android:layout_below="@+id/faculty_name"
            />



            <!--            <com.airbnb.lottie.LottieAnimationView-->
            <!--                    android:layout_width="70dp"-->
            <!--                    android:layout_height="70dp"-->
            <!--                    android:id="@+id/animation"-->
            <!--                    app:lottie_loop="true"-->
            <!--                    android:layout_alignParentEnd="true"-->
            <!--                    android:layout_marginStart="20dp"-->
            <!--                    android:layout_centerVertical="true"-->
            <!--                    app:lottie_fileName="loadingjson1.json"-->
            <!--                    app:lottie_autoPlay="true"-->
            <!--            />-->

            <TextView
                    android:id="@+id/p_shortDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Short Description"
                    android:textSize="12dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="serif"
                    android:textColor="@color/white"
            />
            <TextView
                    android:id="@+id/p_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Product Description"
                    android:fontFamily="serif"
                    android:textSize="14sp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/white"
            />

            <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

            <TextView
                    android:id="@+id/p_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:padding="5dp"
                    android:text="price"
                    android:fontFamily="serif"
                    android:layout_marginRight="15dp"
                    android:textSize="10dp"
                    android:layout_gravity="end"
                    android:textColor="@color/white"
            />

            <TextView
                    android:id="@+id/p_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:padding="5dp"
                    android:text="Discount"
                    android:fontFamily="serif"
                    android:layout_marginRight="15dp"
                    android:textSize="10dp"
                    android:layout_gravity="end"
                    android:textColor="@color/white"
            />

            </LinearLayout>

            <TextView
                    android:id="@+id/p_deac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:padding="5dp"
                    android:text="Deactivate"
                    android:fontFamily="serif"
                    android:layout_marginRight="15dp"
                    android:textSize="10dp"
                    android:layout_gravity="end"
                    android:textColor="@color/purple"
                    android:background="@drawable/buttonshapewhitebg"
            />

            <TextView
                    android:visibility="gone"
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/plink"
                    android:layout_marginBottom="5dp"
                    android:text="Delete"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="serif"
                    android:layout_marginRight="10dp"
                    android:textSize="18dp"
                    android:textColor="@color/blue"
            />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>